<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <com.zhph.commonlibrary.views.NoScrollViewPager
        android:id="@+id/vp_container_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <!--底部Tab-->
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_e0e0e0"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="53dp"
        android:background="@color/colorTabBackground"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="@dimen/dp_4">

        <!--主页-->
        <RadioButton
            android:id="@+id/rb_home_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="-4dp"
            android:drawableTop="@drawable/selector_icon_home"
            android:gravity="center"
            android:text="@string/home"
            android:textColor="@drawable/selector_main_tab_text_color"
            android:textSize="@dimen/dp_10"/>

        <!--我的订单-->
        <RadioButton
            android:id="@+id/rb_order_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_icon_order"
            android:gravity="center"
            android:text="@string/order"
            android:textColor="@drawable/selector_main_tab_text_color"
            android:textSize="@dimen/dp_10"/>

        <!--在线还款-->
        <RadioButton
            android:id="@+id/rb_online_repayment_main"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_icon_online_repayment"
            android:gravity="center"
            android:text="@string/online_repayment"
            android:textColor="@drawable/selector_main_tab_text_color"
            android:textSize="@dimen/dp_10"/>

        <!--我的-->
        <RadioButton
            android:id="@+id/rb_mine_main"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:button="@null"
            android:drawableTop="@drawable/selector_icon_mine"
            android:gravity="center"
            android:text="@string/mine"
            android:textColor="@drawable/selector_main_tab_text_color"
            android:textSize="@dimen/dp_10"/>
    </RadioGroup>
</LinearLayout>